!!! 5
%html
  %head
    %meta{:charset => "utf-8"}/

    %title= yield(:title).blank? ? "IndyHackers - Events and Jobs for Programmers in Indianapolis" : "#{yield(:title)} - IndyHackers"

    %meta{:content => 'Miles Z. Sterrett', :name => "author"}/
    - if yield(:description).blank?
      %meta{:content => "Bringing together hackers in the Indianapolis area.", :name => "Description"}/
    - else
      = yield(:description)
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Voces"/>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Dosis:400,300,200,500,600,700,800" />

    = stylesheet_link_tag 'application'
    <link rel="stylesheet" type="text/css" media="screen and (max-width:969px)" href="/assets/responsive/width-0-969.css"/>
    <link rel="stylesheet" type="text/css" media="screen and (max-width:767px)" href="/assets/responsive/width-0-767.css"/>
    <link rel="stylesheet" type="text/css" media="screen and (min-width:480px) and (max-width:969px)" href="/assets/responsive/width-480-969.css"/>
    <link rel="stylesheet" type="text/css" media="screen and (min-width:768px) and (max-width:969px)" href="/assets/responsive/width-768-969.css"/>
    <link rel="stylesheet" type="text/css" media="screen and (min-width:480px) and (max-width:767px)" href="/assets/responsive/width-480-767.css"/>
    <link rel="stylesheet" type="text/css" media="screen and (max-width:479px)" href="/assets/responsive/width-0-479.css"/>

    = stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    = favicon_link_tag "/favicon.png"
    = yield(:head)

  %body{class: "#{request[:controller].split('/').join(' ')} #{request[:action]}"}
    = admin_header
    .main.main-body
      .header.clear-fix
        .layout-50p-left.clear-fix
          = link_to 'Indy Hackers', '/', :class => 'header-logo'

        .layout-50p-right
          .header-phone
            %ul.no-list.menu
              %li= link_to 'Jobs', '/jobs'
              %li= link_to 'Submit a Job', '/job_post_requests/new'
              %li= link_to 'Calendar', '/calendar'

      .content.clear-fix
        %ul.no-list.clear-fix.section-list

          - if notice
            %li.text-center.clear-fix
              .notice= notice
          - if alert
            %li.text-center.clear-fix
              .alert= alert
          = yield

      .footer.layout-50.clear-fix
        .layout-50-left
          %h2 missin' somethin'?
          %p
            Want to recommend an event for the calendar? Fill out&nbsp;
            %a{ :href => 'https://docs.google.com/forms/d/e/1FAIpQLSdlfIqF42uU8iyoYyqKDFPEYRsNCOCFYpFJwMTvdVOkK3otSg/viewform?usp=sf_link' }> this form
            \.
          %p
            Just wanna chat? Hit us up at
            = link_to '@indyhackersorg', "https://twitter.com/indyhackersorg"
        #made-by.layout-50-right
          %h3 Crafted Lovingly but with Wild Abandon By
          %ul.clear-fix
            %li
              %p
                = link_to 'http://mdswanson.com' do
                  = image_tag 'matt-swansons-face.jpeg'
              %p= link_to 'Matt Swanson', 'http://mdswanson.com'
              %p= link_to '@_swanson', 'http://twitter.com/_swanson'
            %li
              %p
                = link_to 'http://mileszs.com' do
                  = image_tag 'my-face.jpeg'
              %p= link_to 'Miles Z. Sterrett', 'http://mileszs.com'
              %p= link_to '@mileszs', 'http://twitter.com/mileszs'
          %p Background photo by Garrett Hart


    = javascript_include_tag 'application'
    <!-- Google Analytics -->
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-3615572-3']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    <!-- END Google Analytics -->
    = yield(:footer)
