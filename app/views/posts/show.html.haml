- title resource.title
- description(truncate(resource.body, :length => 140))
.grid_10.prefix_1
  %section
    %article.readable
      %h1= resource.title
      %p.date-published= l(resource.published_at, :format => :long)
      = resource.body_html.try(:html_safe)
      #disqus_thread
        :javascript
          /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
          var disqus_shortname = 'indyhackers'; // required: replace example with your forum shortname

          /* * * DON'T EDIT BELOW THIS LINE * * */
          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();

      %noscript
        Please enable JavaScript to view the 
        %a{:href => "http://disqus.com/?ref_noscript"} comments powered by Disqus.
      %a{:href => "http://disqus.com", :class => "dsq-brlink"} 
        blog comments powered by 
        %span.logo-disqus Disqus
